generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Lotto {
  id          String        @id @unique
  name        String
  pcsoId      Int?
  LottoResult LottoResult[]
}

model LottoResult {
  id           Int      @id @default(autoincrement())
  drawAt       DateTime @db.Date
  results      Json
  lotto        Lotto    @relation(fields: [lottoId], references: [id])
  lottoId      String
  jackpotPrize Float?

  @@unique([lottoId, drawAt])
  @@index([lottoId])
  @@index([drawAt])
  @@index([lottoId, drawAt(sort: Desc)])
}
