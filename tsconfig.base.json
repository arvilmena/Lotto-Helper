{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lottolotto/constants": ["packages/constants/src/index.ts"],
      "@lottolotto/ui3": ["packages/ui3/src/index.ts"],
      "@lottolotto/util": ["packages/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
